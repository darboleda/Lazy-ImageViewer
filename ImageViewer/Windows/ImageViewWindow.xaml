<Window x:Class="ImageViewer.ImageViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"         
        Title="MainWindow" Height="600" Width="480"
        Style="{DynamicResource MainWindowStyle}"
        Icon="/imageviewer.ico"
        >
    <Grid Background="{DynamicResource MainWindowBackground}">
        <!--<Viewbox>-->
        <ScrollViewer x:Name="Scroller" VerticalScrollBarVisibility="Hidden" Visibility="Collapsed">
            <Grid x:Name="ImageBoxGrid" Background="White" Width="Auto">
                <Image x:Name="ImageBox" RenderTransformOrigin="0.5, 0.5" />
            </Grid>
        </ScrollViewer>
        <!--</Viewbox>-->
    </Grid>
</Window>
